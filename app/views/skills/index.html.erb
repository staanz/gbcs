<% content_for :title, 'Skills' %>

<div class="skills">
  <div class="wrapper">
    <h1>Skills</h1>
    <h4>User Distribution</h4>
    <small><%= link_to 'DETAILS', {controller:'skills', action:'index', view:'details'}, id:'details', remote:true %>
    <%= link_to 'CORE', {controller:'skills', action:'index', view:'core'}, id:'core' %></small>
    <div class="skill-dist">
      <div id="chart">
        <%= render 'category_skills' if Skill.count > 0 %>
      </div>
    </div>
    <div class="table-wrapper">
        <div class="skills-table">
          <table>
            <thead>
            <tr>
              <td>S.No.</td>
              <td>Skill</td>
              <td>Weight</td>
              <td>Category</td>
              <td>Description</td>
              <td></td>
              <td></td>
            </tr>
            </thead>
            <tbody id="skill-list">
              <% if @skills.count > 0 %>
                  <%= render partial: 'skills' %>
              <% else %>
                <tr id="none-message" style="text-align: center"><td colspan="6">No Skills Added Yet.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div>
    </div>

    <hr/>
    <%= link_to 'Create Skill', new_skill_path, id: 'create-skill', remote: true %>

  </div>
</div>