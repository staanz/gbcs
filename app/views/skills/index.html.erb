<% content_for :title, 'Skills' %>

<div class="skills">
  <div class="wrapper">
    <h1>Skills</h1>
    <% if @skills.count > 0 %>
        <div class="skills-table">
          <table>
            <thead>
            <tr>
              <td>S.No.</td>
              <td>Skill</td>
              <td>Category</td>
              <td>Description</td>
              <td></td>
              <td></td>
            </tr>
            </thead>
            <tbody id="skill-list">
                <%= render partial: 'skills' %>
            </tbody>
          </table>
        </div>
    <% else %>
        <p>No Skills Added Yet.</p>
    <% end %>

    <hr/>
    <%= link_to 'Create Skill', new_skill_path, id: 'create-skill', remote: true %>

  </div>
</div>