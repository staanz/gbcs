<% content_for :title, 'Sign In' %>
<div class="registrations">
  <div class="wrapper">
    <h2>LOG IN</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <% f.label :email %>
          <%= f.email_field :email, id:'inputs', autofocus: true, placeholder:'my.email@ufl.edu' %>
        </div>

        <div class="field">
          <% f.label :password %>
          <%= f.password_field :password, id:'inputs', autocomplete: "off", placeholder:'Password' %>
        </div>

        <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me, id:'check-box' %>
              <%= f.label :remember_me %>
            </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "Log in", class:'submit-btn' %>
        </div>
        <br/>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
