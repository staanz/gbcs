<div class="participate">
  <%= link_to 'Participate', '#', remote: true, id:'participate-button', class:'submit-btn' %>
  <div id="choices" style="display: none">
    <%= link_to 'Select team', {controller:'competitions', action:'select_team', :competition => @competition.id}, remote: true, id:'select-button', class:'submit-btn' if current_user.teams.present? %>
    <%= link_to 'Create Team', mine_teams_path, id:'create-button', class:'submit-btn' %>
    <small><%= link_to 'Cancel', '#', remote: true, id:'participate-cancel' %></small>
  </div>
</div>