<h4>Competition Information</h4>
<%= form_for @competition, remote: true do |f| %>

    <div class="data-fields">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, placeholder: 'Competition Name' %>
    </div>
    <div class="data-fields">
      <%= f.label :url %>
      <%= f.text_field :url, autofocus: true, placeholder: 'http://source.com' %>
    </div>
    <div class="data-fields">
      <%= f.label :description %>
      <%= f.text_area :description, autofocus: true, placeholder: 'Competition Details' %>
    </div>
    <div class="data-fields">
      <%= f.label :host %>
      <%= f.text_field :host, autofocus: true %>
    </div>
    <div class="data-fields">
      <%= f.label :start_date %>
      <%= f.date_field :start, autofocus: true, placeholder: 'Competition Name' %>
    </div>
    <div class="data-fields">
      <%= f.label :type %>
      <%= f.select :comp_type, %w(24-Hour Standard), autofocus: true, selected: 'Standard' %>
    </div>
    <div class="data-fields">
      <%= f.label :duration, 'Duration (Days)' %>
      <%= f.number_field :duration, autofocus: true, placeholder: 'Days' %>
    </div>
    <div class="data-fields">
      <%= f.label :prize %>
      <%= f.text_field :prize, autofocus: true, placeholder: 'Leave blank if none.' %>
    </div>
    <div class="action-button">
      <%= f.submit 'Update', class: 'btn' %><br />
    </div>

    <div class="data-fields">
      <div class="ue">
        <small><%= link_to 'Cancel', '#', id:'cancel-edit' %></small>
      </div>
    </div>

<% end %>