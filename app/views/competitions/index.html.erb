<% content_for :title, 'Competitions' %>
<div class="competitions">
  <% unless user_signed_in? %>
      <div class="login-control">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label '', 'Username' %><br/>
              <%= f.email_field :email, autofocus: true, placeholder:'Gator.Link@ufl.edu', class:'login-field' %><br>
              <%= f.label '', 'Password' %><br/>
              <%= f.password_field :password, autocomplete: "off", placeholder:'-Password-', class:'login-field' %><br>
              <p></p>
              <%= f.submit "LOG IN", class:'login-button' %>
            </div>

        <%end%>
      </div>
  <% end %>
  <div class="wrapper">
    <h1>Open Case Competitions</h1>
    <% if @competitions.any? %>
        <div id="competitions-list">
          <%= render('competitions') %>
        </div>
    <% else %>
      <%= 'No case competitions added yet.' %>
    <% end %>
  </div>
  <div class="details">
    <br/>
    <br/>
    <p>Select Competition for Details.</p>
  </div>
</div>
