<% content_for :title, 'Dashboard' %>
<div class="users">
  <div class="wrapper">
    <div class="news-block">
      <h2>New Items</h2>
      <div class="new-competitions">
        <p><b>Newly Added Competitions</b></p>
        <% new_comps.each do |c| %>
            <%= link_to c do %>
                <p><%= "#{c.name} - "%><%="Starts: #{c.start.strftime("%b %y")}" if c.start%></p>
            <% end %>
        <% end %>
      </div>
    </div>

    <div class="activities-block">
      <h2>New Activities</h2>
      <span class="block">
        <p><b>Enrolled Teams</b></p>
        <%= render 'teams' %>
      </span>
      <span class="block">
        <p><b>Enrolled Competitions</b></p>
        <% if comps.count > 0 %>
            <% comps.each do |comp| %>
                <p>
                  <%= link_to comp.name, comp  %>
                </p>
            <% end %>
        <% else %>
            <p>No Competitions Joined Yet</p>
        <% end %>
      </span>
      <span class="fullblock">
        <% if invites.any? %>
        <p><b>Pending Invites</b></p>
            <% invites.each do |invite| %>
          <p id="invite-<%=invite.id%>">
            <%= link_to invite.sender.fullname, invite.sender %> <%= 'invited' %> you to <%= link_to 'Team '+invite.team.name, invite.team %>
            <small>
              <%= link_to 'Accept', join_member_path(invite), remote: true %>
            </small>
            <small><%= link_to 'Reject', invite, method: :delete, data: {confirm: 'Are you Sure?'}, remote:true %></small>
          </p>
        <% end %>
      <%end%>
      </span>
    </div>

    <div class="info-block">
      <h3>Preferences</h3>
      <%= render 'preferences/preference' %>

      <h3>Skills Rank - <%= current_user.score %></h3>
      <div class="column-graph">
        <% if user_skills.any? %>
            <%= render 'indi_skill_graph' %>
        <% end %>
      </div>
      <div class="skill-list">
        <%= render 'user_skills/index' %>
      </div>

      <hr/>
      <%= link_to 'Add Skill', new_user_skill_path,remote:true, id: 'add-skill' %>
    </div>
  </div>
</div>