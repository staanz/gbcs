<% if current_user.admin %>
    <%= "Name: #{@user.fullname||'Incomplete'}" %><br/>
    <%= "Email: #{@user.email}" %><br/>
    <%= "Contact No.: #{@user.telno}" %><br/>

    <br/><%= link_to 'Change Master Password', edit_admin_path(MasterPass.first), remote: true, id:'master-pass' %><br/><br/>

<% else %>
    <p><%= @user.fullname %></p>

    <p>
      <%= @user.program ? "Program: #{@user.program}" : "Program information not filled." %> |
      <%= @user.term ? "Program: #{@user.term}" : "Term information not filled." %> |
      <%= @user.graduation ? "Graduation: #{@user.graduation}" : "Graduation information not filled." %><br/>
      <%= "Locations available: #{@user.preference.location.humanize}" %><br/>
      <%= "Competitions Interested: #{@user.preference.competition.humanize}" %><br/>
      <%= @user.active ? 'Participation Status: Active' : 'Participation Status: Inactive' %><br/>
      <%= "Skill Score: #{@user.score}" %>
    </p>
<% end %>