var chart = $('#chart-1');
<% if @view == 'details' %>
  chart.replaceWith("<%= j column_chart @team.skill_set, library:{title:'Team Skills', vAxis:{title:'Level'}, backgroundColor:'transparent'} %>");
  $('#details').toggle();
  $('#core').toggle();
<% elsif @view =='core' %>
  chart.replaceWith("<%= j column_chart @team.skill_group, library:{title:'Team Skills', vAxis:{title:'Level'}, backgroundColor:'transparent'} %>");
  $('#details').toggle();
  $('#core').toggle();
<% end %>
