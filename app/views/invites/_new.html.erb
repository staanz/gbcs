<%= form_for @invite, remote: true do |f| %>
    <%= f.collection_select :user_id, User.students.order(lname:'ASC'), :id, :tag, required: true %>
    <%= f.hidden_field :sender_id, value: current_user.id %>
    <%= f.collection_select :team_id, Team.mine(current_user), :id, :name, required: true %>
    <!--< f.number_field :team_id, value: @team.id %>-->
    <%= f.submit 'Invite' %>
    <small><%= link_to 'Cancel', '#', remote: true, id: 'cancel-invite' %></small>
<% end %>