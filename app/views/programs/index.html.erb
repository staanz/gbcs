<% content_for :title, 'All Programs' %>

<div class="heading">
  <h2>All Programs</h2>
</div>

<div class="program-index">
  <div id="program-list">
    <pre><%= "Name\tDescription" %></pre>
    <% if @programs.present? %>
        <%= render 'programs' %>
    <% else %>
        <p class="none-message">No Programs Added Yet.</p>
    <% end %>
  </div>

  <hr/>
  <%= link_to 'Add', new_program_path, remote:true, id:'add-program' %>

</div>