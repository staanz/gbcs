
<div class="sidebar-container">
  <div class="wrapper">
    <% if user_signed_in? %>

    <div class="cover">
      <div class="image">
        <%= link_to(image_tag(current_user.avatar.url(:display), size:'80x80' , class: 'round'), user_edit_avatar_path, remote:true, id:'edit-avatar') %>
      </div>
    </div>

      <div class="settings">
        <div class="tabs">
          <ul>
            <li><%= link_to 'Dashboard', user_dashboard_path %></li>
            <% if current_user.admin %>
                <li><%= link_to 'Skill List', skills_path %></li>
                <li><%= link_to 'Program List', programs_path %></li>
            <% end %>
            <li><%= link_to 'The Yes-List', yes_lists_path %></li>
          </ul>
        </div>
      </div>
    <% end %>
    <div class="tasks">
      <div class="tabs">
        <ul>
          <li><%= link_to 'Create Competition', new_competition_path %></li>
          <li><%= link_to 'Search Competition', competitions_path %></li>
          <br/>
          <li><%= link_to 'My Teams', teams_mine_path %></li>
          <li><%= link_to 'Search Teams', teams_path %></li>
          <br/>
          <li><%= link_to 'All Students', users_path %></li>
        </ul>
      </div>
    </div>
  </div>
</div>