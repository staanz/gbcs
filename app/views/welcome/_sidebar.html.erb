
<div class="sidebar-container">
  <div class="wrapper">
    <% if user_signed_in? %>

    <div class="cover">
      <div class="image">
        <%= link_to(image_tag(current_user.avatar.url(:display), size:'80x80' , class: 'round'), user_edit_avatar_path, remote:true, id:'edit-avatar') %>
      </div>
      <div class="tabs">
        <ul>
          <li><%= link_to 'Users', users_path %></li>
          <li><%= link_to 'Dashboard', user_dashboard_path %>
            <% if current_user.admin %>
              <ul>
                <li><%= link_to 'Skill List', skills_path %></li>
                <li><%= link_to 'Program List', programs_path %></li>
              </ul>
            <% end %>
          </li>
        </ul>
      </div>
    </div>

      <div class="settings">
        <div class="tabs">
          <ul>
            <li><%= link_to 'Profile', current_user, :method => 'get' %></li>
            <li><%= link_to 'The Yes-List', yes_lists_path %></li>
          </ul>
        </div>
      </div>
    <% end %>
    <div class="tasks">
      <div class="tabs">
        <ul>
          <li><%= 'Competitions'%>
            <ul>
              <li><%= link_to 'Create', new_competition_path %></li>
              <li><%= link_to 'Search', competitions_path %></li>
            </ul>
          </li><br/>
          <li><%= 'Teams'%>
            <ul>
              <li><%= link_to 'My Teams', teams_mine_path %></li>
              <li><%= link_to 'Search', teams_path %></li>
            </ul>
        </ul>
      </div>
    </div>
    <div class="close">
      <div class="tabs">
        <ul>
          <li>Other Things</li>
        </ul>
      </div>
    </div>
  </div>
</div>